# Copy this file to .env and fill in values
# NEVER commit .env to git

# Database — SQLite file path
# Local dev (run from backend/ dir): file:../data/isd_oms.db
# Docker: file:/app/data/isd_oms.db
DATABASE_URL="file:../data/isd_oms.db"

# JWT
JWT_SECRET="change-this-to-a-strong-random-secret-min-32-chars"
JWT_EXPIRES_IN="8h"

# Server
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS in development)
FRONTEND_URL="http://localhost:3000"

# Puppeteer — Chromium path (set in Docker via ENV)
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# SQLite WAL checkpoint interval in ms (0 = disable periodic checkpoint)
WAL_CHECKPOINT_INTERVAL_MS=30000
